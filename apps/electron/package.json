{
  "name": "audiobook-converter",
  "private": true,
  "main": "dist/index.cjs",
  "scripts": {
    "dev": "node scripts/watch.js",
    "build": "vite build",
    "compile": "cross-env MODE=production electron-builder build --config .electron-builder.config.js -w",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts",
    "typecheck:main": "tsc --noEmit -p tsconfig.json",
    "typecheck": "tsc --noEmit -p layers/main/tsconfig.json"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "2.1.20",
    "@types/node": "18.0.5",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "cross-env": "7.0.3",
    "dts-for-context-bridge": "0.7.1",
    "electron": "19.0.8",
    "electron-builder": "23.1.0",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.20.0",
    "eslint-plugin-vue": "9.2.0",
    "typescript": "4.7.4",
    "vite": "3.0.0",
    "vite-plugin-replace": "0.1.1"
  },
  "dependencies": {
    "electron-promise-ipc": "2.2.4",
    "fluent-ffmpeg": "2.1.2",
    "node-ffprobe": "3.0.0",
    "piscina": "3.2.0",
    "web": "workspace:*"
  }
